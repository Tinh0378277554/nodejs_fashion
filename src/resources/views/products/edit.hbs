<div class="mt-4">
    <h3>Sửa sản phẩm</h3>
    
        <form method="post" action="/products/{{product._id}}?_method=PUT">
            <div class="mb-3 ">
                <label for="exampleInputEmail1" class="form-label">name</label>
                <input type="text" class="font-weight-bold" class="form-control" value="{{product.name}}" id="name" name="name">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">price</label>
                <input type="text" class="font-weight-bold" class="form-control" value="{{product.price}}" id="price" name="price">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">videoId</label>
                <input type="text" class="font-weight-bold" class="form-control" value="{{product.videoId}}" id="videoId" name="videoId">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">image</label>
                <input type="text" class="font-weight-bold" class="form-control" value="{{product.image}}" id="image" name="image">
            </div>
           
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </form>
</div>