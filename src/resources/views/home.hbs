
{{!-- slider --}}
<div class="mycontent mt-2">
    <div class="container">
            <div  class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img src="https://1.bp.blogspot.com/-NSnQO5HQIaQ/YPDv4ZVequI/AAAAAAAAFiw/Nzo52-YM8EYfagkj0T42Lt0BiKtVHYjuwCLcBGAsYHQ/s16000/slider_1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="https://1.bp.blogspot.com/-NSnQO5HQIaQ/YPDv4ZVequI/AAAAAAAAFiw/Nzo52-YM8EYfagkj0T42Lt0BiKtVHYjuwCLcBGAsYHQ/s16000/slider_1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="https://1.bp.blogspot.com/-NSnQO5HQIaQ/YPDv4ZVequI/AAAAAAAAFiw/Nzo52-YM8EYfagkj0T42Lt0BiKtVHYjuwCLcBGAsYHQ/s16000/slider_1.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
            </div>

    </div>
</div>



<div class="product-list py-2">

    <div class="product_title border-bottom ">
        <div class="row">

            <div class="col-lg-4">
                <strong class="bg-danger text-white">THỜI TRANG</strong>
            </div>
            <div class="col-lg-2">
                Thời trang nữ  
            </div>
            <div class="col-lg-2">
                Thời trang nam 
            </div>
            <div class="col-lg-2">
                Đồng hồ  
            </div>
            <div class="col-lg-2">
                Dày dép nữ 
            </div>
        </div>
    </div>

    <div class="product_item-s py-3">
        <div class="row">

            {{#each products}}
            <div class="col-lg-4 ">
                <div class="card">
                    <a href="/products/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="...">
                    </a>
                    <div class="card-body">
                        <a href="/products/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.price}}</p>
                        <a href="#" class="btn btn-primary">Mua hàng</a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>

</div>